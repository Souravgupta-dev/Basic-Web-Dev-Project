#include<stdio.h>
#include <time.h>
#include<stdlib.h>
int main(){
    int user_score,comp_score;
    int comp_choice, user_choice;
    int play;
    printf("Enter the Round=");
    scanf("%d",&play);
    for(int i=0;i<play;i++){
        srand(time(0));
        printf("Enter Your Choice Rock--0,Paper--1& Scissor--2\n");
        comp_choice=rand()%3;
        scanf("%d",&user_choice);
        if (user_choice==0&&comp_choice==1|| user_choice==1&&comp_choice==2|| user_choice==2&& comp_choice==0){
            printf("Computer Wins !!\n");
            comp_score++;
            
        }
        else if (user_choice==comp_choice){
            printf("DRAW!!\n");
        }else{
            printf("User WINS!!\n");
            user_score++;
            
        }

    }
    if (user_score> comp_score){
        printf("User won\n");
    }else{
        printf("Comp Won \n");
    }
    return 0;
}
